<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.65" fx:controller="it.polito.tdp.lab3.controller.SegreteriaStudentiController">
   <center>
      <VBox prefHeight="200.0" prefWidth="355.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="20.0">
               <children>
                  <Label text="Corso:" />
                  <ComboBox />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Label text="Studente:" />
                  <TextField fx:id="lblMatricola" />
                  <Button fx:id="btnCompleta" mnemonicParsing="false" onAction="#doCompleta">
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0">
                           <image>
                              <Image url="@../../../../../../../../../Desktop/index.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <TextField fx:id="lblNome" />
                  <TextField fx:id="lblCognome" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="20.0">
               <children>
                  <Button fx:id="btnCerca" mnemonicParsing="false" onAction="#doCerca" text="Cerca" />
                  <Button fx:id="btnIscriviti" mnemonicParsing="false" onAction="#doIscriviti" text="Iscrivi" />
               </children>
            </HBox>
            <TextArea />
            <HBox alignment="CENTER_RIGHT">
               <children>
                  <Button fx:id="btnReset" mnemonicParsing="false" onAction="#doReset" text="Reset" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <top>
      <Label text="Lab3_SegreteriaStudenti" BorderPane.alignment="CENTER" />
   </top>
</BorderPane>
